<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="80dp"
    android:layout_height="80dp">

    <ImageView
        android:padding="10dp"
        android:id="@+id/issue_item_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"/>
    <View
        android:layout_alignEnd="@id/issue_item_iv"
        android:layout_alignRight="@+id/issue_item_iv"
        android:background="@android:color/black"
        android:layout_width="3dp"
        android:layout_height="80dp">
    </View>
    <View
        android:layout_alignBottom="@id/issue_item_iv"

        android:background="@android:color/black"
        android:layout_width="80dp"
        android:layout_height="3dp">
    </View>
</RelativeLayout>