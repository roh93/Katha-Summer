<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/polling_input_layout_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <EditText
            android:id="@+id/polling_input_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/age"/>
    </android.support.design.widget.TextInputLayout>
    <RelativeLayout
        android:id="@+id/gen_occ_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp">
        <TextView
            android:id="@+id/gender_tv"
            android:paddingEnd="15dp"
            android:paddingRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gender"
            android:textSize="20sp"/>
        <RadioGroup
            android:id="@+id/gender_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/gender_tv"
            android:layout_toRightOf="@+id/gender_tv"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/male_radio_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/male"
                android:checked="true"
                />
            <RadioButton
                android:id="@+id/female_radio_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "@string/female"
                />
        </RadioGroup>
        <Spinner
            android:layout_below="@id/gender_radio_group"
            android:id="@+id/occupation_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/occupation_array"
            android:prompt="@string/occupation"
            style="@android:style/Widget.Spinner"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:id="@+id/polling_rv">
    </android.support.v7.widget.RecyclerView>

    <Button
        android:layout_weight="0.1"
        android:id="@+id/btn_vote"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/vote"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="40dp"
        android:textColor="@android:color/white"/>

    <Button
        android:layout_weight="0.1"
        android:id="@+id/btn_finish_vote"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/finish_poll"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/white"/>
    </LinearLayout>
</LinearLayout>